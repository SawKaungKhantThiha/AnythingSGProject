<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Fraunces:wght@400;600&family=Space+Grotesk:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/shop.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/web3/1.8.1/web3.min.js"></script>
  <title>AnythingSG Register</title>
</head>
<body>
  <div class="app-shell">
    <nav class="nav">
      <div class="nav-title">AnythingSG Marketplace</div>
      <div class="nav-links">
        <a href="/shop">Marketplace</a>
        <a href="/escrow/new">Escrow Checkout</a>
        <a href="/delivery/track">Delivery Tracking</a>
        <a href="/orders/new" data-role="seller" hidden>Create Order</a>
        <a href="/orders/manage">Order Actions</a>
      </div>
      <div class="nav-actions">
        <span id="navUserLabel" class="nav-user" data-auth="user" hidden></span>
        <a href="/auth/login" data-auth="guest">Log in</a>
      </div>
    </nav>

    <section class="hero">
      <div>
        <span class="pill">Create account</span>
        <h1>Register your email and wallet.</h1>
        <p>Your account includes both buyer and seller roles, using the same MetaMask wallet.</p>
      </div>
      <div class="hero-card">
        <div class="pill">Required</div>
        <p>Connect MetaMask during registration so the wallet is stored for your role.</p>
      </div>
    </section>

    <section class="form-panel">
      <h3>Register</h3>
      <form id="registerForm">
        <div class="form-grid">
          <div class="input-group">
            <label for="email">Email</label>
            <input id="email" name="email" type="email" placeholder="you@example.com" required>
          </div>
          <div class="input-group">
            <label for="password">Password</label>
            <input id="password" name="password" type="password" placeholder="Create password" required>
          </div>
          <div class="input-group">
            <label for="wallet">Connected Wallet</label>
            <input id="wallet" name="wallet" placeholder="Connect MetaMask" readonly required>
          </div>
        </div>
        <div class="hero-actions">
          <button class="btn secondary" id="connectWallet" type="button">Connect MetaMask</button>
          <button class="btn" type="submit">Register</button>
        </div>
      </form>
      <div id="status" class="status-block" hidden></div>
    </section>
  </div>

  <div id="connectModal" class="modal-backdrop active" aria-hidden="false">
    <div class="modal">
      <h3>Connect MetaMask</h3>
      <p>Please connect your MetaMask wallet to link it with this email. This tells us if you are registering as a buyer or seller.</p>
      <div class="modal-actions">
        <button class="btn secondary" id="closeModal" type="button">Not now</button>
        <button class="btn" id="modalConnect" type="button">Connect wallet</button>
      </div>
    </div>
  </div>

  <script src="/js/shop-web3.js"></script>
  <script src="/js/auth.js"></script>
  <script>
    const registerForm = document.getElementById("registerForm");
    const walletField = document.getElementById("wallet");
    const connectWalletBtn = document.getElementById("connectWallet");
    const statusEl = document.getElementById("status");
    const connectModal = document.getElementById("connectModal");
    const modalConnect = document.getElementById("modalConnect");
    const closeModal = document.getElementById("closeModal");

    function hideModal() {
      connectModal.classList.remove("active");
      connectModal.setAttribute("aria-hidden", "true");
    }

    async function connectWallet() {
      try {
        const account = await getAccount();
        walletField.value = account;
        statusEl.hidden = true;
        hideModal();
      } catch (error) {
        setStatus(statusEl, error.message, true);
        statusEl.hidden = false;
      }
    }

    connectWalletBtn.addEventListener("click", connectWallet);
    modalConnect.addEventListener("click", connectWallet);
    closeModal.addEventListener("click", hideModal);

    const params = new URLSearchParams(window.location.search);
    const emailParam = params.get("email");
    if (emailParam) {
      registerForm.email.value = emailParam;
      registerForm.email.readOnly = true;
    }

    registerForm.addEventListener("submit", (event) => {
      event.preventDefault();
      const email = AnythingSGAuth.normalizeEmail(registerForm.email.value);
      const password = (registerForm.password.value || "").trim();
      const wallet = AnythingSGAuth.normalizeWallet(walletField.value);

      if (!email || !password || !wallet) {
        setStatus(statusEl, "Please enter email, password, and connect MetaMask.", true);
        statusEl.hidden = false;
        return;
      }

      const users = AnythingSGAuth.loadUsers();
      const existingUser = users.find(
        (user) => AnythingSGAuth.normalizeEmail(user.email) === email
      );

      if (existingUser) {
        setStatus(statusEl, "This email is already registered.", true);
        statusEl.hidden = false;
        return;
      }

      const walletTaken = users.find(
        (user) => AnythingSGAuth.normalizeWallet(user.wallet) === wallet
      );

      if (walletTaken) {
        setStatus(statusEl, "This wallet is already registered. Use a different wallet.", true);
        statusEl.hidden = false;
        return;
      }

      users.push({ email, password, wallet, roles: ["buyer", "seller"] });
      AnythingSGAuth.saveUsers(users);
      AnythingSGAuth.saveSession({ email, role: "buyer", wallet });
      window.location.href = "/shop";
    });
  </script>
</body>
</html>
