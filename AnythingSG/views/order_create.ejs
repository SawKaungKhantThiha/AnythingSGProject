<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Fraunces:wght@400;600&family=Space+Grotesk:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/shop.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/web3/1.8.1/web3.min.js"></script>
  <title>Create Order</title>
</head>
<body>
  <% const account = typeof acct !== 'undefined' ? acct : ''; %>
  <div class="app-shell">
    <nav class="nav">
      <div class="nav-title">Order Tracking</div>
      <div class="nav-links">
        <a href="/shop">Home</a>
        <a href="/orders/new">Create Order</a>
        <a href="/orders/manage">Order Actions</a>
      </div>
    </nav>

    <section class="hero">
      <div>
        <span class="pill">OrderTracking.sol</span>
        <h1>Create a new order</h1>
        <p>Orders are now created automatically when escrow is locked.</p>
      </div>
      <div class="hero-card">
        <div class="pill">Active account</div>
        <div class="status-row">
          <strong>Wallet</strong>
          <span><%= account || 'Not connected' %></span>
        </div>
      </div>
    </section>

    <section class="form-panel">
      <h3>Linked Order</h3>
      <div class="form-grid">
        <div class="input-group">
          <label>Order ID</label>
          <input id="orderId" placeholder="-" readonly>
        </div>
        <div class="input-group">
          <label>Buyer Address</label>
          <input id="buyer" placeholder="-" readonly>
        </div>
        <div class="input-group">
          <label>Seller Address</label>
          <input id="seller" placeholder="-" readonly>
        </div>
      </div>
      <div class="status-block">
        <div class="status-row">
          <span>Tip</span>
          <span>Go to Order Actions to set courier and delivery status.</span>
        </div>
      </div>
      <button id="goActions" class="btn" type="button">Go to Order Actions</button>
      <div id="status" class="status-block"></div>
    </section>
  </div>
  <script src="/js/shop-web3.js"></script>
  <script>
    const statusEl = document.getElementById("status");
    const orderIdEl = document.getElementById("orderId");
    const buyerEl = document.getElementById("buyer");
    const sellerEl = document.getElementById("seller");
    const goActionsBtn = document.getElementById("goActions");

    function loadLinkedOrder() {
      const raw = localStorage.getItem("lastEscrowOrder");
      if (!raw) {
        setStatus(statusEl, "No linked escrow order found. Lock escrow first.", true);
        return;
      }
      try {
        const data = JSON.parse(raw);
        orderIdEl.value = data.orderId || "-";
        buyerEl.value = data.buyer || "-";
        sellerEl.value = data.seller || "-";
        setStatus(statusEl, "Linked order loaded from escrow.", false);
      } catch (error) {
        setStatus(statusEl, "Linked order data is invalid. Lock escrow again.", true);
      }
    }

    goActionsBtn.addEventListener("click", () => {
      window.location = "/orders/manage";
    });

    window.addEventListener("DOMContentLoaded", loadLinkedOrder);
  </script>
</body>
</html>
