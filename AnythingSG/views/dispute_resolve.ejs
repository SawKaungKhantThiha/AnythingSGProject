<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Fraunces:wght@400;600&family=Space+Grotesk:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/shop.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/web3/1.8.1/web3.min.js"></script>
  <title>Resolve Dispute</title>
</head>
<body>
  <div class="app-shell">
    <nav class="nav">
      <div class="nav-title">Arbitrator Console</div>
      <div class="nav-links">
        <a href="/shop">Home</a>
        <a href="/orders/new" data-role="seller" hidden>Create Order</a>
        <a href="/orders/view">View Order</a>
      </div>
      <div class="nav-actions">
        <span id="navUserLabel" class="nav-user" data-auth="user" hidden></span>
        <a href="/auth/login" data-auth="guest">Log in</a>
        <a href="/auth/register" data-auth="guest">Register</a>

        <a href="/auth/login?role=seller" id="switchSellerLink" data-role="buyer" hidden>Switch to Seller</a>
        <a href="#" id="logoutBtn" data-auth="user" hidden>Log out</a>

      </div>
    </nav>

    <section class="hero">
      <div>
        <span class="pill">OnlineStoreDisputes.sol</span>
        <h1>Resolve dispute outcomes</h1>
        <p>Arbitrator calls <strong>resolveDispute(orderId, outcome)</strong> with RefundBuyer or ReleaseToSeller.</p>
      </div>
      <div class="hero-card">
        <div class="pill">Outcomes</div>
        <p>RefundBuyer = 1, ReleaseToSeller = 2.</p>
      </div>
    </section>

    <section class="form-panel">
      <h3>Resolve Dispute</h3>
      <form id="resolveDisputeForm">
        <div class="form-grid">
          <div class="input-group">
            <label for="orderId">Order ID</label>
            <input id="orderId" name="orderId" placeholder="Order ID" required>
          </div>
          <div class="input-group">
            <label for="outcome">Outcome</label>
            <select id="outcome" name="outcome" required>
              <option value="" disabled selected>Select outcome</option>
              <option value="1">Refund Buyer</option>
              <option value="2">Release to Seller</option>
            </select>
          </div>
        </div>
        <button class="btn" type="submit">Resolve</button>
      </form>
      <div id="status" class="status-block"></div>
    </section>
  </div>
  <script src="/js/shop-web3.js"></script>
  <script src="/js/auth.js"></script>
  <script>
    const resolveDisputeForm = document.getElementById("resolveDisputeForm");
    const statusEl = document.getElementById("status");

    resolveDisputeForm.addEventListener("submit", async (event) => {
      event.preventDefault();
      try {
        setStatus(statusEl, "Connecting wallet...", false);
        const account = await getAccount();
        const contract = await loadContract("OnlineStoreDisputes");
        const orderId = resolveDisputeForm.orderId.value.trim();
        const outcome = resolveDisputeForm.outcome.value.trim();

        setStatus(statusEl, "Submitting resolution...", false);
        await contract.methods.resolveDispute(orderId, outcome).send({ from: account });
        setStatus(statusEl, "Dispute resolved.", false);
      } catch (error) {
        setStatus(statusEl, error.message, true);
      }
    });
  </script>
</body>
</html>
