<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Fraunces:wght@400;600&family=Space+Grotesk:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/shop.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/web3/1.8.1/web3.min.js"></script>
  <title>Create Order</title>
</head>
<body>
  <% const account = typeof acct !== 'undefined' ? acct : ''; %>
  <div class="app-shell">
    <nav class="nav">
      <div class="nav-title">Order Tracking</div>
      <div class="nav-links">
        <a href="/shop">Home</a>
        <a href="/orders/manage">Order Actions</a>
      </div>
    </nav>

    <section class="hero">
      <div>
        <span class="pill">OrderTracking.sol</span>
        <h1>Create a new order</h1>
        <p>This matches <strong>OrderTracking.createOrder(orderId, buyer, seller)</strong>. Use your backend or admin panel to call it.</p>
      </div>
      <div class="hero-card">
        <div class="pill">Active account</div>
        <div class="status-row">
          <strong>Wallet</strong>
          <span><%= account || 'Not connected' %></span>
        </div>
      </div>
    </section>

    <section class="form-panel">
      <h3>Order Creation</h3>
      <form id="orderCreateForm">
        <div class="form-grid">
          <div class="input-group">
            <label for="orderId">Order ID</label>
            <input id="orderId" name="orderId" placeholder="e.g. 100024" required>
          </div>
          <div class="input-group">
            <label for="buyer">Buyer Address</label>
            <input id="buyer" name="buyer" placeholder="0x..." required>
          </div>
          <div class="input-group">
            <label for="seller">Seller Address</label>
            <input id="seller" name="seller" placeholder="0x..." required>
          </div>
        </div>
        <div class="status-block">
          <div class="status-row">
            <span>Tip</span>
            <span>Set courier and shipment status on the next screen.</span>
          </div>
        </div>
        <button class="btn" type="submit">Create Order</button>
      </form>
      <div id="status" class="status-block"></div>
    </section>
  </div>
  <script src="/js/shop-web3.js"></script>
  <script>
    const orderCreateForm = document.getElementById("orderCreateForm");
    const statusEl = document.getElementById("status");

    orderCreateForm.addEventListener("submit", async (event) => {
      event.preventDefault();
      try {
        setStatus(statusEl, "Connecting wallet...", false);
        const account = await getAccount();
        const contract = await loadContract("OrderTracking");
        const orderId = orderCreateForm.orderId.value.trim();
        const buyer = orderCreateForm.buyer.value.trim();
        const seller = orderCreateForm.seller.value.trim();

        setStatus(statusEl, "Submitting transaction...", false);
        await contract.methods.createOrder(orderId, buyer, seller).send({ from: account });
        setStatus(statusEl, "Order created on-chain.", false);
      } catch (error) {
        setStatus(statusEl, error.message, true);
      }
    });
  </script>
</body>
</html>
