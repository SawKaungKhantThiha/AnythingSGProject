<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Fraunces:wght@400;600&family=Space+Grotesk:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/shop.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/web3/1.8.1/web3.min.js"></script>
  <title>Create Order</title>
</head>
<body>
  <% const account = typeof acct !== 'undefined' ? acct : ''; %>
  <div class="app-shell">
    <nav class="nav">
      <div class="nav-title">Create Order</div>
      <div class="nav-links">
        <a href="/shop">Marketplace</a>
        <a href="/orders/view">Order Hub</a>
      </div>
    </nav>

    <section class="hero">
      <div>
        <span class="pill">Step 1 of 3</span>
        <h1>Confirm your order</h1>
        <p>Your payment will be held securely until delivery is confirmed.</p>
      </div>
      <div class="hero-card">
        <div class="pill">Wallet</div>
        <div class="status-row">
          <strong>Wallet</strong>
          <span><%= account || 'Not connected' %></span>
        </div>
      </div>
    </section>

    <section class="form-panel">
      <h3>Order Details</h3>
      <form id="orderCreateForm">
        <div class="form-grid">
          <div class="input-group">
            <label for="orderId">Order ID</label>
            <input id="orderId" name="orderId" placeholder="e.g. 100024" required>
          </div>
          <div class="input-group">
            <label for="productName">Item</label>
            <input id="productName" name="productName" placeholder="e.g. MetaPet Smart Feeder" required>
          </div>
          <div class="input-group">
            <label for="amount">Amount (ETH)</label>
            <input id="amount" name="amount" placeholder="e.g. 0.18" required>
          </div>
          <div class="input-group">
            <label for="buyer">Buyer Address</label>
            <input id="buyer" name="buyer" placeholder="0x..." required>
          </div>
          <div class="input-group">
            <label for="seller">Seller Address</label>
            <input id="seller" name="seller" placeholder="0x..." required>
          </div>
        </div>
        <div class="status-block">
          <div class="status-row">
            <span>Next</span>
            <span>Continue to secure payment and lock funds.</span>
          </div>
        </div>
        <button class="btn" type="submit">Create Order</button>
      </form>
      <div class="status-block">
        <div class="status-row">
          <span>Step 2</span>
          <a class="btn secondary" id="continueToPayment" href="/escrow/new">Continue to Secure Payment</a>
        </div>
      </div>
      <div id="status" class="status-block"></div>
    </section>
  </div>
  <script src="/js/shop-web3.js"></script>
  <script>
    const orderCreateForm = document.getElementById("orderCreateForm");
    const statusEl = document.getElementById("status");
    const continueToPayment = document.getElementById("continueToPayment");

    orderCreateForm.addEventListener("submit", async (event) => {
      event.preventDefault();
      try {
        setStatus(statusEl, "Connecting wallet...", false);
        const account = await getAccount();
        const contract = await loadContract("OrderTracking");
        const orderId = orderCreateForm.orderId.value.trim();
        const buyer = orderCreateForm.buyer.value.trim();
        const seller = orderCreateForm.seller.value.trim();

        setStatus(statusEl, "Submitting transaction...", false);
        await contract.methods.createOrder(orderId, buyer, seller).send({ from: account });
        setStatus(statusEl, "Order created on-chain.", false);
      } catch (error) {
        setStatus(statusEl, error.message, true);
      }
    });

    orderCreateForm.orderId.addEventListener("input", (event) => {
      const orderId = event.target.value.trim();
      if (orderId) {
        continueToPayment.href = `/escrow/new?orderId=${encodeURIComponent(orderId)}`;
      } else {
        continueToPayment.href = "/escrow/new";
      }
    });
  </script>
</body>
</html>
