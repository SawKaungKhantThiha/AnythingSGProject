<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Fraunces:wght@400;600&family=Space+Grotesk:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/shop.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/web3/1.8.1/web3.min.js"></script>
  <title>Complete Order</title>
</head>
<body>
  <div class="app-shell">
    <nav class="nav">
      <div class="nav-title">Complete Order</div>
      <div class="nav-links">
        <a href="/shop">Marketplace</a>
        <a href="/orders/view">Order Hub</a>
      </div>
    </nav>

    <section class="hero">
      <div>
        <span class="pill">Step 3 of 3</span>
        <h1>Confirm delivery &amp; complete order</h1>
        <p>Once delivery is confirmed, funds are released to the seller automatically.</p>
      </div>
      <div class="hero-card">
        <div class="pill">Buyer only</div>
        <p>This action is restricted to the buyer address saved on-chain.</p>
      </div>
    </section>

    <section class="form-panel">
      <h3>Complete Order</h3>
      <form id="completeOrderForm">
        <div class="form-grid">
          <div class="input-group">
            <label for="orderId">Order ID</label>
            <input id="orderId" name="orderId" placeholder="Order ID" required>
          </div>
        </div>
        <button class="btn" type="submit">Confirm Delivery &amp; Complete</button>
      </form>
      <a class="btn secondary" id="backToOrder" href="/orders/view">Back to Order Hub</a>
      <div id="status" class="status-block"></div>
    </section>
  </div>
  <script src="/js/shop-web3.js"></script>
  <script>
    const completeOrderForm = document.getElementById("completeOrderForm");
    const statusEl = document.getElementById("status");
    const backToOrder = document.getElementById("backToOrder");

    completeOrderForm.addEventListener("submit", async (event) => {
      event.preventDefault();
      try {
        setStatus(statusEl, "Connecting wallet...", false);
        const account = await getAccount();
        const contract = await loadContract("OnlineStoreDisputes");
        const orderId = completeOrderForm.orderId.value.trim();

        setStatus(statusEl, "Submitting completion...", false);
        await contract.methods.completeOrder(orderId).send({ from: account });
        setStatus(statusEl, "Order completed. Funds released to seller.", false);
      } catch (error) {
        setStatus(statusEl, error.message, true);
      }
    });

    window.addEventListener("load", () => {
      const params = new URLSearchParams(window.location.search);
      const orderId = params.get("orderId");
      if (orderId) {
        completeOrderForm.orderId.value = orderId;
        backToOrder.href = `/orders/view?orderId=${encodeURIComponent(orderId)}`;
      }
    });
  </script>
</body>
</html>
